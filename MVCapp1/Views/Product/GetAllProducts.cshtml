<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Images</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product item in Model)
        {
        <tr>
            <th scope="row">@item.ID</th>
            <td>@item.Name</td>
            <td>@item.Price</td>
                <td>
                    @item.Description<br />
                    @* <a href="/Product/GetProduct/@item.ID">Go </a> *@
                    <a class="btn btn-primary" href="/Product/GetProduct/@item.ID" role="button">for Details</a>
                </td>
            <td><img src="/Images/@item.Image" style="width:200px" /></td>
        </tr>
        }
    </tbody>
</table>

